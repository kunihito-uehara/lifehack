<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= user.errors.count %> 件のエラーがあります。</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :名前 %><br>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :メール %><br>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :パスワード %><br>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :パスワード確認 %><br>
    <%= form.password_field :password_confirmation %><br><br>
  </div>
    <div>
    <%= form.check_box :admin,{}, "true","false" %>
    <%= form.label :admin, "管理者" %><br>
  </div>
  <div>
    <p><%= form.submit "登録する"%></p>
  </div>
<% end %>
