<div class="profile">
  <h1><span>User</span>マイページ</h1>

  <div class="profile-icon">
    <%#= user_icon @user.icon.url, size: '400x300' if @user.icon && @user.icon.url %>
    <p>アイコン画像 : <%= @user.icon %></p>
    
  </div>


    <p>名前 : <%= @user.name %></p>
    <p>メールアドレス : <%= @user.email %></p>
    <p>好きなライフハック : <%= @user.like_hack %></p>

      <ul>
        <li>
          <% if current_user == @user %>
            <%= link_to 'ユーザ編集', edit_user_path, class: 'btn user-show-btn' %>
          <% end %>
        </li>
        <li>
          <% if current_user.admin? %>
            <%= link_to '管理者画面', rails_admin_path, class: 'btn user-show-btn' %>
          <% end %>
        </li>
      </ul>
  </div>
</div>