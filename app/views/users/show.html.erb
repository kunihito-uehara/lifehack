<div class="profile">
  <h1><span>User</span>マイページ</h1>

  <div class="profile-icon">
    <%#= user_icon @user.icon.url, size: '400x300' if @user.icon && @user.icon.url %>
    <%= @user.icon.to_s %>

  </div>

  <div class="profile-box">

    <%= @user.name %></h2>
    <%= @user.email %>
    <%= @user.like_hack %>

    <div class="p">
      <ul>
        <li>
          <%# if current_user == User.find(params[:id]) %>
            <%#= link_to 'ユーザ編集', edit_user_path, class: 'btn user-show-btn' %>
          <%# end %>
        </li>
        <li>
          <% if current_user.admin? %>
            <%= link_to '管理者画面', rails_admin_path, class: 'btn user-show-btn' %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>