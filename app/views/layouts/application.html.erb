<!DOCTYPE html>
<html>
  <head>
    <title>Lifehack</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header class="header">
    <% if action_name != "top" %>
      <%= link_to root_path ,class:"top_menu_logo" do %>
        <%= image_tag "lifehack_logo.png" , class:"logo"%>
      <% end %>
    <% end %>

    <ul class="top_menu_right">
    <% if user_signed_in? %>
      <%= link_to "プロフィール", user_path(current_user.id), class:"profile" %>
      <%#= link_to "プロフィール編集", edit_user_registration_path %>
      <%= link_to '記事一覧', articles_path, class:"article" %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"logout" %>
    <% else %>
      <%= link_to "新規登録", new_user_registration_path %>
      <%= link_to "ログイン", new_user_session_path %>
      <%#= link_to 'ゲストログイン' , users_guest_sign_in_path, method: :post %>
    <% end %>
    </ul>
  </header>

<%= yield %>


<% if flash.any? %>
      <script type="text/javascript">
        <% flash.each do |key, value| %>
          <% key = "success" if key == "notice" %>
          <% key = "error" if key == "alert" %>
          toastr['<%= key %>']('<%= value %>');
        <% end %>
      </script>
<% end %>
  <script type="text/javascript">
  // toastr.success("")
  // toastr.error("")
  // toastr.warning("hello")
  // toastr.info("hello")
</script>    

    <footer class="footer">
    <p>Created by kuni </p>
    </footer>
  </body>
</html>
