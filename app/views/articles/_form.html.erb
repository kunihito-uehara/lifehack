<%= form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "件") %> のエラーです</h2>
      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= form.label :タイトル %>
    <%= form.text_field :title, class:"article-title-from" %>

  <div class="actions">
    <%= form.button '記事投稿' ,class: 'btn btn-primary' %>
  </div>
<% end %>
