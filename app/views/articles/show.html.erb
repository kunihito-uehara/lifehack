    <% if user_signed_in? %>
        <div class="comment-create">
            <h3 class="text-left">レビューを投稿する</h3>
            <%= render partial: 'comments/form', locals: { comment: @comment, article: @article } %>
        </div>
        </div>
    <% end %>
    
    ！エラー！
    <% unless @article.user_id == current_user.id %>
      <% if @favorite.present? %>
        <%= link_to 'お気に入り解除する', article_favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
      <% else %>
        <%= link_to 'お気に入りする', article_favorites_path(article_id: @article.id), method: :post, class: 'btn btn-primary' %>
      <% end %>
    <% end %>
